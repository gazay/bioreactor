#!/usr/bin/env ruby

$0 = 'websocket'

require 'bundler'
Bundler.require :websocket

EM.run do

  EM::WebSocket.start(host: 'bioreactor.r10.railsrumble.com', port: 8080) do |socket|

    socket.onopen do
      Worm.new socket.object_id
    end

    socket.onclose do
      Worm.destroy socket.object_id
    end

    socket.onmessage do |message|
      Worm.find(socket.object_id).direction = message.to_i
    end

  end

end
