#!/usr/bin/env ruby

$0 = 'websocket'

require 'bundler'
Bundler.require :websocket
$:.unshift './lib'
require 'cell'
require 'map'
require 'worm'
require 'human'

def json(command, data)
  JSON.generate [command, data]
end

def tick
  EM::Timer.new(0.05) do
    Worm.all.each &:move
    json = JSON.generate ['render', Map.data]
    Worm.sockets.each do |socket|
      socket.send json
    end
    tick
  end
end

EM.run do

  EM::WebSocket.start(host: 'bioreactor.r10.railsrumble.com', port: 8080) do |socket|

    socket.onopen do
      socket.send json('id', socket.object_id)
      Worm.new socket
    end

    socket.onclose do
      Worm.destroy socket
    end

    socket.onmessage do |message|
      Worm.find(socket).direction = message.to_i
    end

  end

  tick
end
